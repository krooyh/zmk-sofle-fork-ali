          &none                     &rgb_ug RGB_TOG                  &rgb_ug RGB_SAI              &rgb_ug RGB_BRI           &rgb_ug RGB_EFR               &rgb_ug RGB_SPI                              &none                                              &none                   &none                         &none                         &none                         &none                                   &none
// ├───────────────────────────┼──────────────────────────────┼────────────────────────────┼───────────────────────────┼───────────────────────────┼──────────────────────────┼────────────────────────────────────────────────────────────────────┼───────────────────────┼───────────────────────────────┼──────────────────────────┼──────────────────────────┼────────────────────────────────────────┼────────────────────────────┤
          &none                     &rgb_ug EP_TOG                   &rgb_ug RGB_SAI              &rgb_ug RGB_BRD           &rgb_ug RGB_EFF               &rgb_ug RGB_SPD                              &none                                              &none                   &none                         &none                         &none                         &none                                   &none
// ├───────────────────────────┼──────────────────────────────┼────────────────────────────┼───────────────────────────┼───────────────────────────┼──────────────────────────┼───────────────────┼────────────────────────┼───────────────────────┼───────────────────────┼───────────────────────────────┼──────────────────────────┼──────────────────────────┼────────────────────────────────────────┴────────────────────────────╯
          &sys_reset                                                 &none                        &none                     &none                         &none                     &none              &none                    &none                     &none                   &none                         &none                         &bootloader
// ╰───────────────────────────╯                              ╰────────────────────────────┴───────────────────────────┴───────────────────────────┴──────────────────────────┴───────────────────┴────────────────────────┴───────────────────────┴───────────────────────┴───────────────────────────────┴──────────────────────────┴──────────────────────────╯
            >;

            sensor-bindings = <&inc_dec_kp C_BRI_UP C_BRI_DEC>;
            display-name = "CONTROL";
        };

        layer_3 {
            bindings = <
// ╭───────────────────────────┬──────────────────────────────┬────────────────────────────┬───────────────────────────┬───────────────────────────┬──────────────────────────┬────────────────────────────────────────────────────────────────────┬───────────────────────┬───────────────────────────────┬──────────────────────────┬──────────────────────────┬────────────────────────────────────────┬────────────────────────────╮
          &none                     &none                            &none                        &none                     &none                         &none                                        &none                                              &none                   &none                         &none                         &none                     &none                                    &none
// ├───────────────────────────┼──────────────────────────────┼────────────────────────────┼───────────────────────────┼───────────────────────────┼──────────────────────────┼────────────────────────────────────────────────────────────────────┼───────────────────────┼───────────────────────────────┼──────────────────────────┼──────────────────────────┼────────────────────────────────────────┼────────────────────────────┤
          &none                     &none                            &none                        &none                     &none                         &none                                        &none                                              &none                   &none                         &none                         &none                     &none                                    &none
// ├───────────────────────────┼──────────────────────────────┼────────────────────────────┼───────────────────────────┼───────────────────────────┼──────────────────────────┼────────────────────────────────────────────────────────────────────┼───────────────────────┼───────────────────────────────┼──────────────────────────┼──────────────────────────┼────────────────────────────────────────┼────────────────────────────┤
          &none                     &none                            &none                        &none                     &none                         &none                                        &none                                              &none                   &none                         &none                         &none                     &none                                    &none
// ├───────────────────────────┼──────────────────────────────┼────────────────────────────┼───────────────────────────┼───────────────────────────┼──────────────────────────┼────────────────────────────────────────────────────────────────────┼───────────────────────┼───────────────────────────────┼──────────────────────────┼──────────────────────────┼────────────────────────────────────────┼────────────────────────────┤
