// ╰───────────────────────────╯                              ╰────────────────────────────┴───────────────────────────┴───────────────────────────┴──────────────────────────┴───────────────────┴────────────────────────┴───────────────────────┴───────────────────────┴───────────────────────────────┴──────────────────────────┴──────────────────────────╯
            >;

            sensor-bindings = <&inc_dec_kp C_BRI_UP C_BRI_DEC>;
            display-name = "LAYER2";
        };

        layer_3 {
            bindings = <
// ╭───────────────────────────┬──────────────────────────────┬────────────────────────────┬───────────────────────────┬───────────────────────────┬──────────────────────────┬────────────────────────────────────────────────────────────────────┬───────────────────────┬───────────────────────────────┬──────────────────────────┬──────────────────────────┬────────────────────────────────────────┬────────────────────────────╮
          &trans                    &trans                           &trans                       &trans                    &trans                        &trans                                       &trans                                             &trans                  &trans                        &trans                        &trans                    &trans                                   &trans
// ├───────────────────────────┼──────────────────────────────┼────────────────────────────┼───────────────────────────┼───────────────────────────┼──────────────────────────┼────────────────────────────────────────────────────────────────────┼───────────────────────┼───────────────────────────────┼──────────────────────────┼──────────────────────────┼────────────────────────────────────────┼────────────────────────────┤
          &trans                    &trans                           &trans                       &trans                    &trans                        &trans                                       &trans                                             &trans                  &trans                        &trans                        &trans                    &trans                                   &trans
// ├───────────────────────────┼──────────────────────────────┼────────────────────────────┼───────────────────────────┼───────────────────────────┼──────────────────────────┼────────────────────────────────────────────────────────────────────┼───────────────────────┼───────────────────────────────┼──────────────────────────┼──────────────────────────┼────────────────────────────────────────┼────────────────────────────┤
